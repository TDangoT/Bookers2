<div class="row">
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
    <a></a>
    <% end %>
  <% else %>
    <%= link_to user_path(current_user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
    <a></a>
    <% end %>
  <% end %>
</div>