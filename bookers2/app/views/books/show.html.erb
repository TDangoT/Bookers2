<main>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <%= render "users/show", user: @user %>
                <%= render "users/edit", user: @user %>
                <%= render "books/new", book: @book %>
            </div>
            <div class="col-md-8 col-md-offset-1">

                <h2>Book detail</h2>

                <div>
                 <table class="table">
                  <tbody>
                        <tr>
                            <td>
                                <%= link_to book_path(@book.id) do %>
                                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" ,size: "100x100" %>
                                <br><%= @user.name %>
                                <% end %>
                            </td>
                            <td>
                              <%= link_to book_path(@book.id) do %>
                              <%= @book.title %>
                              <% end %>
                            </td>
                            <td><%= @book.body %></td>
                            <% if @book.user == current_user %>
                             <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></td>
                             <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete %></td>
                            <% end %>
                        </tr>
                  </tbody>
                 </table>
                </div>
            </div>
        </div>
    </div>
 </main>
<%= render "homes/list" %>
